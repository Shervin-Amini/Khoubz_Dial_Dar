<p style="color: green"><%= notice %></p>
<div id="show" class="container">
  <a class="fa-solid fa-arrow-left" href="/products" style="text-decoration:none; color:orange; family-font:'Open Sans'; font-weight:bold; font-size: medium; ">
    Liste de produits
  </a>
  <%= render "product" %>

  <% if current_user%>
    <% if @product.seller_id == current_user.id%>
    <a href="<%= edit_recipe_path(@product.id) %>" style="position:absolute; right:20px; top:250px; color:black">
    <i class="fa-solid fa-wand-magic-sparkles"></i></a>
    <% end %>
  <% end %>

  <a href="<%= new_product_order_path(@product)%>"style="position:absolute; right:80px; top:250px; color:black">
  <i class="fa-sharp fa-solid fa-basket-shopping"></i></a>

  <% if current_user%>
    <% if @product.seller_id == current_user.id%>
      <%= link_to  product_path(@product), data: {turbo_method: :delete}, style: "position: absolute;  right:140px; top:250px; color:black" do %>
        <i class="fa-solid fa-trash-can"></i>
      <% end %>
    <% end %>
  <% end %>
</div>
