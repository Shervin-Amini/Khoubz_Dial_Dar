
<div class="container">
  <div class="d-flex justify-content-around mb-5">
      <h1>Mes recettes</h1>
    </div>
    <div class="grid">
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
        <%# added the line above so that the whole card becomes clickable %>
          <div class="products" style="text-decoration:none" >
              <div class="card-trip">
                  <% if product.photo.attached? %>
                    <%= cl_image_tag product.photo.key, class: "projcard-img", crop: :fill %>
                  <% else %>
                    <img src="https://images.unsplash.com/photo-1586765501019-cbe3973ef8fa?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1168&q=80">
                  <% end %>
                <div class="card-trip-infos">
                 <%= cl_image_tag product.seller.photo.key, class:"card-trip-user avatar-bordered"  %>
                </div>
                  <div class="d-flex flex-column">
                    <p><h2><%= product.name %></h2></p>
                    <p><%= product.price %> MAD</p>
                  </div>
              </div>
          </div>
        <% end %>
      <% end %>
       <%= link_to new_recipe_url do %>
          <div class="products" style="text-decoration:none" >
              <div class="card-trip add-product">
                  <img src="https://i.pinimg.com/originals/3a/dc/db/3adcdb390790baf3dd3c0638868d0e42.jpg">
                <span><i class="fa-regular fa-square-plus"></i></span>
                <div class="card-trip-infos">
                </div>
                  <div class="d-flex flex-column">
                    <h2>Ajouter une nouvelle recette</h2>
                  </div>
              </div>
          </div>
        <% end %>
    </div>
</div>
