
<h1>Edit this product </h1>
<%= form_with model: @product do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_area :price, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary mt-3' %>

<% end %>
